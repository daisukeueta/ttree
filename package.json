{
  "name": "ttree",
  "version": "0.1.0",
  "description": "Tree-format directory structure display with token counting",
  "main": "dist/index.js",
  "bin": {
    "ttree": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs --target node18 --clean --shims",
    "dev": "tsx src/index.ts",
    "test": "vitest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "cli",
    "tree",
    "tokens",
    "directory",
    "files"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.0.0",
    "tiktoken": "^1.0.15",
    "chalk": "^5.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}